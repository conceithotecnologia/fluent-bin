/**
   Retorna uma string com lista de parametros de uma funcao

	@author    Wagner Mobile Costa
	@date      05/03/2005 13:15:00
	@trigger

	@param in_oid Nome da Função do Catalog de Funções do Sistema

	@return String com Lista de parametros

	Histórico
	---------------------------------------------------------------------------------------------------------------------
   Legenda: [-] - Correção / [*] - Recurso modificado/melhorado / [+] - Implementação de recurso
*/
Create or Replace Function sys_paramfunction( 
   oid )
Returns varchar
as '
Declare
   In_oid Alias For $1;

   xParamFunction varchar;
   iParam integer;
   iParams integer;
   xParam varchar;

Begin

   xParamFunction = '''';
   select pronargs into iParams
     from pg_proc
    where oid = in_oid;

   If iParams = Null Then
      iParams:= -1;
   Else
      iParams:= iParams -1;
   End If;

   For iParam In 0..iParams Loop
      select pg_type.typname into xParam
        from pg_proc join pg_type on pg_type.oid = proargtypes[iParam]
       where pg_proc.oid = in_oid;

      If xParam = ''varchar'' Or xParam = ''timestamp'' Then
         xParam:= ''"'' || xParam || ''"'';
      End If;

      If iParam < iParams Then
         xParam:= xParam || '','';
      End If;

      xParamFunction:= xParamFunction || xParam;
   End Loop;

   Return xParamFunction;

End;
' language 'plpgsql'
